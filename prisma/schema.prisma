generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Team { 
  id        String       @id @default(uuid()) 
  name      String
  teamLogo  String?
  players   Player[]
}

model Player { 
  id           String    @id @default(uuid())
  name         String
  playerImage  String?
  team         Team      @relation(fields: [teamId], references: [id])
  teamId       String
} 